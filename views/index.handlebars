<h1 class="text-center">Eat Healthy Burger!</h1>

<div class="container">
  <div class="row">
    {{#each burgers}}
      {{#unless this.devoured}}
    <div class="col-md-4 well">
      <button class="btn btn-warning btn-md">{{this.id}}. {{this.burger_name}}</button>
    </div>
    <div class="col-md-4">
      <form action="/api/update" method="POST">
            <input type="hidden" name="burger_id" type="text" value={{this.id}}>
            <button type="submit" name="burger_id" class="btn btn-danger btn-md">Devour burger!!!</button>
      </form>
    </div>
    <div class="col-md-4">
      <button class="btn btn-warning btn-md">{{this.id}}. {{this.burger_name}}</button
    </div>
     {{/unless}}
    {{/each}}
    <div class="col-md-8 well"></div>
    <div class="col-md-4">
      {{#each burgers}}
        {{#if this.devoured}}
            <button class="btn btn-success btn-md">{{this.id}}. {{this.burger_name}}</button>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center enter_section">
      <form action="/api/create" method="POST">
      <input type="text" name="burger_name" class="form-control"><br>
        <button type="submit" class="btn btn-lg pull right" placeholder="Enter Your Favorite Burger...">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>